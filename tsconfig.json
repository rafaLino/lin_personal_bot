{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@commands":["./src/commands/*"],
      "@middlewares":["./src/middlewares/*"],
      "@repositories":["./src/repositories/*"],
      "@types":["./src/types/*"],
      "@utils":["./src/utils/*"],
      
    }
  },
  "include": ["src", "api"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/config"
  ],
  
}